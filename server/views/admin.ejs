<h1>GESTION D'UTILISATEURS  <a href="/profil" class="btn btn-info">profil</a></h1>
<% include ./partials/messages %>
  <% user.forEach(function(user) {  %>
    <div style="display: inline-block;margin-right:10%">
  <table class="table table-hover table-dark" style="text-align:center;width:400px;">
    <tbody>
      <tr>
        <th scope="row"><i class="fas fa-user"></i> User :  <%= user.login %></th>
      </tr>
      <tr>
        <th scope="row"><i class="fas fa-user-shield"></i> Admin : <%= user.admin%></th>
      </tr>
      <tr>
        <th scope="row"><i class="far fa-envelope"></i> Email : <%= user.email%></th>
      </tr>
      <tr>
        <th scope="row">
      </th>
      </tr>
    </tbody>
  </table>
  <div class="form-inline" style="margin-top:-3%;margin-bottom:8%">
    <form action="/admin/delete" method="post" style="margin-right:2%">
      <input type="hidden" name="user" value="<%= user.email %>">
      <input type="hidden" name="name" value="<%= user.login %>">
      <button type="submit" class="btn btn-danger" style="background:#b30000"><i class="fas fa-user-slash"></i> remove user</button>
    </form>
    <% if(user.admin === false){ %>
    <form action="/admin/upgrade" method="post" style="margin-right:2%">
      <input type="hidden" name="user" value="<%= user.email%>">
      <input type="hidden" name="name" value="<%= user.login %>">
      <button type="submit" class="btn btn-success"><i class="fas fa-user-check"></i> upgrade admin</button>
    </form>
    <% } else { %>
    <form action="/admin/downgrade" method="post">
      <input type="hidden" name="user" value="<%= user.email%>">
      <input type="hidden" name="name" value="<%= user.login %>">
      <button type="submit" class="btn btn-danger"><i class="fas fa-user-times"></i> remove admin</button>
    </form>
    <% } %>
  </div>
</div>
  <% }); %>
